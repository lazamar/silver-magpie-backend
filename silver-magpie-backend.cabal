  build-depends:
    base ^>=4.12.0.0,
    text ^>=1.2.3.1,
    bytestring ^>=0.10.8.2,
    aeson ^>=1.4.0.0,
    bson,
    servant,
    servant-server,
    wai,
    warp,
    text,
    mongoDB,
    either,
    yaml,
    authenticate-oauth,
    http-client-tls,
    wai-cors,
    http-client,
    http-types,
    bytestring,
    containers,
    uri-encode,
    servant,
    servant-server,
    errors,
    mongoDB,
    mtl,
    transformers,
    concurrency,
    exceptions,
    sqlite-simple

  -- Directories containing source files.
  hs-source-dirs:      server

