  -- .hs or .lhs file containing the Main module.
  main-is:             Main.hs

  -- Modules included in this executable, other than Main.
  other-modules:
    Api
    App
    Authenticate
    Env
    MongoTypes.AppAuth
    MongoTypes.UserDetails
    Routes.AppGetAccess
    Routes.AppRevokeAccess
    Routes.Favorite
    Routes.Home
    Routes.Mentions
    Routes.Retweet
    Routes.SaveCredentials
    Routes.SignIn
    Routes.StatusUpdate
    Routes.UserSearch
    SafeHttp
    Twitter
    Types

